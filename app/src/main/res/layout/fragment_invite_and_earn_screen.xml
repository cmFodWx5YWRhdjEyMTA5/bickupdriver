<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.bickupdriver.fragments.InviteAndEarnScreen">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_200"
        android:background="@color/appcolor">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_180"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/invite_earn" />

    </RelativeLayout>

    <TextView
        android:id="@+id/earn_txt_1"
        style="@style/mediumTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_container"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/txt_earn_credits"
        android:textColor="@color/grey_text_color"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_your_bank"
        style="@style/mediumTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/earn_txt_1"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/txt_your_bank"
        android:textColor="@color/grey_text_color"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_share"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/txt_your_bank"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_30"
        android:src="@drawable/share" />

    <TextView
        android:id="@+id/txt_reffral_code"
        style="@style/mediumTextSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_share"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center"
        android:text="@string/txt_refrel_code"
        android:textColor="@color/grey_text_color" />

    <RelativeLayout
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_40"
        android:layout_below="@+id/txt_reffral_code"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_15"
        android:elevation="5dp">

        <TextView
            android:id="@+id/txt_code"
            style="@style/smallTextSize"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="GUJ895J" />

        <View
            android:id="@+id/devider"
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="match_parent"

            android:layout_toEndOf="@+id/txt_code"
            android:background="@color/greyColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/devider">

            <ImageView
                android:id="@+id/iv_copy_referral_code"
                style="@style/smallTextSize"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/attachment"
                android:text="GUJ895J" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentBottom="true"
            android:background="@color/greyColor" />


    </RelativeLayout>


</RelativeLayout>
